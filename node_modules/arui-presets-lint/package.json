{
    "name": "arui-presets-lint",
    "version": "6.1.0",
    "description": "Config files for arui-apps",
    "author": "Good guys from Alfa-Bank",
    "license": "MIT",
    "dependencies": {
        "@alfalab/stylelint-core-vars": "1.5.0",
        "@commitlint/cli": "16.3.0",
        "@commitlint/config-conventional": "16.2.4",
        "arui-cssvars": "1.2.0",
        "command-line-args": "5.2.1",
        "conventional-changelog-cli": "2.2.2"
    },
    "peerDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "eslint": "^8.20.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "~3.1.5",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-dirnames": "^1.0.3",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-unicorn": "^42.0.0",
        "husky": "^4.3.8",
        "lint-staged": "^12.5.0",
        "prettier": "^2.7.1",
        "stylelint": "^14.9.1",
        "stylelint-config-prettier": "^9.0.3"
    },
    "devDependencies": {
        "@alfalab/core-components": "28.6.0",
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/commit-analyzer": "8.0.1",
        "@semantic-release/git": "9.0.1",
        "@semantic-release/npm": "7.1.3",
        "@semantic-release/release-notes-generator": "9.0.3",
        "@typescript-eslint/eslint-plugin": "5.30.6",
        "@typescript-eslint/parser": "5.30.6",
        "arui-feather": "19.2.2",
        "eslint": "8.20.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-airbnb-typescript": "17.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-import-resolver-typescript": "3.1.5",
        "eslint-plugin-cypress": "2.12.1",
        "eslint-plugin-dirnames": "1.0.3",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsx-a11y": "6.6.1",
        "eslint-plugin-react": "7.30.1",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "eslint-plugin-unicorn": "42.0.0",
        "husky": "4.3.8",
        "kebab-case": "1.0.0",
        "lint-staged": "12.5.0",
        "prettier": "2.7.1",
        "react": "17.0.1",
        "semantic-release": "17.4.7",
        "stylelint": "14.9.1",
        "stylelint-config-prettier": "9.0.3",
        "typescript": "4.4.4"
    },
    "scripts": {
        "precommit": "lint-staged",
        "test": "yarn test:eslint && yarn test:stylelint",
        "test:eslint": "yarn eslint:prettier-conflicts-check && eslint \"./test/**/*.{ts,tsx,js,jsx}\"",
        "test:stylelint": "yarn stylelint:prettier-conflicts-check && node ./test/stylelint-test.js",
        "stylelint:prettier-conflicts-check": "stylelint-config-prettier-check",
        "eslint:prettier-conflicts-check": "eslint-config-prettier ./eslint/index.js",
        "lint:css": "stylelint **/*.css",
        "lint:scripts": "eslint \"**/*.{js,jsx,ts,tsx}\" --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "yarn lint:css --fix && yarn lint:scripts --fix",
        "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,css,json,md}\""
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,json}": [
            "prettier --write",
            "eslint --fix --max-warnings=0"
        ],
        "stylelint/*.js": [
            "prettier --write",
            "yarn test:stylelint"
        ]
    },
    "resolutions": {
        "set-value": ">=2.0.1",
        "js-yaml": ">=3.13.1",
        "braces": ">=2.3.1",
        "lodash.merge": ">=4.6.2",
        "lodash": ">=4.17.12",
        "mixin-deep": ">=1.3.2",
        "handlebars": ">=4.5.3",
        "kind-of": ">= 6.0.3",
        "minimist": ">= 1.2.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "prettier": "./prettier",
    "stylelint": {
        "extends": "./stylelint"
    },
    "eslintConfig": {
        "extends": "./eslint",
        "rules": {
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": [
                        "test/**/*"
                    ]
                }
            ]
        }
    },
    "commitlint": {
        "extends": "./commitlint"
    }
}
